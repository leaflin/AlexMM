$(document).ready(function(e) {
	   var arr=[1,2,3];
	   var rand = arr[Math.floor(Math.random() * arr.length)];
	   alert(rand);
	  //$("body").html('<img src="img/bk0'+rand+'.jpg" width="1920" height="1200">');
		 $("body").css('background-image','url(img/bk0'+rand+'.jpg)')
  
});

</script>
